<?xml version="1.0" encoding="utf-8"?><!-- Layout for a single list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/tan_background"
        tools:src="@drawable/number_one" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:background="@color/category_numbers">

        <TextView
            android:id="@+id/miwok_text_view"
            style="@style/ListItemTextView"
            android:textStyle="bold"
            tools:text="Miwok Translation" />

        <TextView
            android:id="@+id/default_text_view"
            style="@style/ListItemTextView"
            tools:text="Default Translation" />

    </LinearLayout>

</LinearLayout>